---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";

import BackToPrev from "@components/BackToPrev.astro";

export async function getStaticPaths() {
  const posts = (await getCollection("publications"))
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<"publications">;

const post = Astro.props;
const { Content } = await post.render();
---

<PageLayout title={post.data.title}>
  <Container>
    <div class="animate">
      <BackToPrev href="/publications">
        Back to Publications
      </BackToPrev>
    </div>
    <div class="space-y-1 my-10"> {/* Removed 'relative' from here as button is no longer absolute */}
      <div class="animate flex items-center gap-1.5">
        <div class="font-base text-sm">
          <FormattedDate date={post.data.date} />
        </div>
      </div>
      <div class="animate text-2xl font-semibold text-black dark:text-white">
        {post.data.title}
      </div>
      {/* Button moved here, removed absolute positioning, and added margin-top */}
      <a
        href={post.data.URL}
        target="_blank"
        rel="noopener noreferrer"
        class="animate inline-block mt-4 px-3 py-1 text-sm font-medium text-black/60 dark:text-white/60 bg-stone-50/50 dark:bg-zinc-800/50 border border-stone-300/50 dark:border-zinc-700/50 rounded-full backdrop-blur-sm hover:bg-stone-200/75 dark:hover:bg-zinc-700/75 transition-colors duration-300"
        aria-label={`View paper: ${post.data.title}`}
      >
        View Paper
      </a>
    </div>
    <article class="animate">
      <Content />
    </article>
  </Container>
</PageLayout>