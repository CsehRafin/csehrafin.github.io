---
import Layout from "../layouts/Layout.astro";
import certifications from '../../public/data/certifications.json';
---

<Layout>
  <main class="py-30 min-h-screen max-w-5xl mx-auto relative space-y-8">
    <!-- Page Title -->
    <h1 class="text-4xl font-bold mb-8 text-center text-light-slate animate-fade-in break-all">
      Certifications & Courses
    </h1>

    <div class="space-y-6">
      {certifications.map(cert => (
        <div class="bg-navy-slate/10 backdrop-blur-sm rounded-lg p-6 space-y-2 transition hover:shadow-lg animate-fade-in break-all">
          {cert.link ? (
            <a href={cert.link} target="_blank" class="text-2xl font-medium text-accent-cyan hover:underline block break-all">
              {cert.name}
            </a>
          ) : (
            <h2 class="text-2xl font-medium text-accent-cyan break-all">{cert.name}</h2>
          )}

          <p class="text-light-slate text-sm sm:text-base break-all">{cert.issuer}</p>

          {cert.credential && (
            <p class="text-light-slate text-sm sm:text-base font-mono break-all">
              Credential ID: {cert.credential}
            </p>
          )}

          <p class="italic text-light-slate text-sm sm:text-base break-all">{cert.date}</p>
        </div>
      ))}
    </div>

    <!-- Floating tech shapes -->
    <div class="absolute top-1/4 -left-16 w-48 sm:w-64 h-48 sm:h-64 bg-accent-cyan/5 rounded-full blur-3xl animate-float pointer-events-none"></div>
    <div class="absolute bottom-1/4 -right-16 w-48 sm:w-64 h-48 sm:h-64 bg-accent-cyan/5 rounded-full blur-3xl animate-float-reverse pointer-events-none"></div>
  </main>
</Layout>
