---
import Layout from "../layouts/Layout.astro";
import projects from "../../public/data/projects.json";
---

<Layout>
  <main class="min-h-screen px-4 py-30 max-w-5xl mx-auto space-y-8">
    <h1 class="text-4xl font-bold mb-8 text-center text-light-slate animate-fade-in">
      Projects
    </h1>

    <div class="space-y-6">
      {projects.map(project => (
        <a class="block bg-navy-slate/10 backdrop-blur-sm rounded-lg space-y-2 transition p-6 hover:shadow-lg animate-fade-in">
          <h2 class="text-2xl font-medium text-accent-cyan">{project.title}</h2>
          <p class="text-light-slate text-sm sm:text-base">@ {project.organization}</p>
          <p class="italic text-light-slate text-sm sm:text-base">{project.dates}</p>
          <p class={`text-sm sm:text-base font-medium ${project.status === 'Maintained' ? 'text-green-500' : 'text-accent-cyan'}`}>
            {project.status}
          </p>
          <p class="text-light-slate text-sm sm:text-base py-3">{project.description}</p>
        </a>
      ))}
    </div>
  </main>
</Layout>