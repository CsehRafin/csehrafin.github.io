---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <body class="relative overflow-x-hidden text-slate">
    <!-- Animated Background Grid -->
    <div class="fixed inset-0 cyber-grid pointer-events-none opacity-30 z-0"></div>

    <!-- Floating tech shapes -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-1/4 -left-16 w-48 sm:w-64 h-48 sm:h-64 bg-accent-cyan/5 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-1/4 -right-16 w-48 sm:w-64 h-48 sm:h-64 bg-accent-cyan/5 rounded-full blur-3xl animate-float-reverse"></div>
      <div class="absolute top-1/2 left-1/3 w-36 sm:w-52 h-36 sm:h-52 bg-accent-cyan/10 rounded-full blur-2xl animate-float"></div>
    </div>

    <!-- Main Content -->
    <main class="relative z-15 px-4 sm:px-16 md:px-16 lg:px-32">
      <section id="hero" class="min-h-screen flex flex-col items-center justify-center text-center space-y-6 sm:space-y-8">

        <h1 class="p-5 text-5xl sm:text-4xl md:text-9xl lg:text-9xl font-bold text-light-slate animate-fade-in font-efi">
          <span>404 | NUH UH!</span>
        </h1>
        <p class="text-base sm:text-lg md:text-xl lg:text-xl text-slate max-w-xl sm:max-w-3xl lg:max-w-5xl mx-auto font-light animate-fade-in leading-relaxed">
            The page you're looking for doesn't exist.
        </p>
      </section>
    </main>
  </body>
</Layout>
